/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;
    
    PARTS:
    Nand(a=a, b=b, out=nandAB);
    
    Nand(a=a, b=nandAB, out=nandAAB);
    
    Nand(a=b, b=nandAB, out=nandBBB);
    
    Nand(a=nandAAB, b=nandBBB, out=out);
}